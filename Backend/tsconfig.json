{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",

    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "useDefineForClassFields": false,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
